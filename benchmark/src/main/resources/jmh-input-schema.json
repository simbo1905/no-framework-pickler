{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["benchmark", "primaryMetric"],
    "properties": {
      "benchmark": {
        "type": "string",
        "pattern": "^org\\.sample\\.[A-Za-z]+Benchmark\\.(nfp|jdk|protobuf)$"
      },
      "primaryMetric": {
        "type": "object",
        "required": ["score", "scoreUnit"],
        "properties": {
          "score": {
            "type": "number",
            "minimum": 0
          },
          "scoreError": {
            "type": "number",
            "minimum": 0
          },
          "scoreUnit": {
            "type": "string",
            "enum": ["ops/s", "ms/op"]
          }
        }
      }
    }
  }
}